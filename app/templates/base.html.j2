{% extends 'bootstrap/base.html' %}

{% block styles %}
  {{ super() }}
  <link href="{{ url_for('static', filename='style.css') }}" rel="stylesheet">
  <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
{% endblock %}

{% block scripts %}
    {{ super() }}
    {{ moment.include_moment() }}

    <script>
    // Dirty fix for dropdown menus in table-responsive
    (function () {
      $('.table-responsive').on('shown.bs.dropdown', function (e) {
        var $table = $(this),
            $menu = $(e.target).find('.dropdown-menu'),
            tableOffsetHeight = $table.offset().top + $table.height(),
            menuOffsetHeight = $menu.offset().top + $menu.outerHeight(true);

        if (menuOffsetHeight > tableOffsetHeight)
          $table.css("padding-bottom", menuOffsetHeight - tableOffsetHeight);
      });

      $('.table-responsive').on('hide.bs.dropdown', function () {
        $(this).css("padding-bottom", 0);
      })
    })();

    // Change drop direction for dropdown menus
    function determineDropDirection(){
      $(".dropdown-menu-index").each( function(){
        $(this).css({
          visibility: "hidden",
          display: "block"
        });

        $(this).parent().removeClass("dropup");

        if ($(this).offset().top + $(this).outerHeight() > $(window).innerHeight() + $(window).scrollTop()){
          $(this).parent().addClass("dropup");
        }

        $(this).removeAttr("style");
      });
    }

    determineDropDirection();

    $(window).scroll(determineDropDirection);
    </script>
{% endblock %}

{% block title %}
    {% if title %}{{ title }} - ESPCI Bar{% else %}Welcome to ESPCI Bar{% endif %}
{% endblock %}

{% block navbar %}
    <nav class="navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#global-navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {% if current_user.is_bartender %}
                <a class="navbar-brand" href="{{ url_for('main.index') }}">ESPCI Bar</a>
                {% elif current_user.is_anonymous %}
                <a class="navbar-brand" href="{{ url_for('auth.login') }}">ESPCI Bar</a>
                {% else %}
                <a class="navbar-brand" href="{{ url_for('main.user', username=current_user.username) }}">ESPCI Bar</a>
                {% endif %}
            </div>
            <div class="collapse navbar-collapse" id="global-navbar-collapse">
                <ul class="nav navbar-nav">
                    {% if current_user.is_bartender %}
                    <li {% if (request.path == '/index' or request.path == '/') and current_user.is_bartender %}class="active"{% endif %}>
                      <a href="{{ url_for('main.index') }}">
                        <span class="glyphicon glyphicon-credit-card"></span> Checkout
                      </a>
                    </li>
                    <li {% if request.path == '/scanqrcode' and current_user.is_bartender %}class="active"{% endif %}>
                      <a href="{{ url_for('main.scanqrcode') }}">
                        <span class="glyphicon glyphicon-qrcode"></span> Scan QR
                      </a>
                    </li>
                    <li {% if (request.path == '/inventory') and current_user.is_bartender %}class="active"{% endif %}>
                      <a href="{{ url_for('main.inventory')}}">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Inventory
                      </a>
                    </li>
                    <li class="dropdown {% if (request.path == '/transactions' or request.path == '/statistics') and current_user.is_bartender %}active{% endif %}">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="glyphicon glyphicon-tasks"></span> Logs
                      </a>
                      <ul class="dropdown-menu">
                        <li>
                          <a href="{{ url_for('main.transactions') }}">
                            <span class="glyphicon glyphicon-list-alt"></span> Transactions
                          </a>
                        </li>
                        <li>
                          <a href="{{ url_for('main.statistics') }}">
                            <span class="glyphicon glyphicon-stats"></span> Statistics
                          </a>
                        </li>
                      </ul>
                    </li>
                    <li {% if (request.path == '/settings') and current_user.is_bartender %}class="active"{% endif %}>
                      <a href="{{ url_for('main.index')}}">
                        <span class="glyphicon glyphicon-cog"></span> Settings
                      </a>
                    </li>
                    <li class="dropdown {% if (request.path == '/tools' or request.path == '/auth/register') and current_user.is_bartender %}active{% endif %}">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="glyphicon glyphicon-wrench"></span> Tools
                      </a>
                      <ul class="dropdown-menu">
                        <li>
                          <a href="{{ url_for('auth.register') }}">
                            <span class="glyphicon glyphicon-plus"></span> Add user
                          </a>
                        </li>
                      </ul>
                    </li>
                    {% endif %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if current_user.is_anonymous %}
                    <li class="active"><a href="{{ url_for('auth.login') }}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    {% else %}
                    <li {% if '/user' in request.path or '/edit_profile' in request.path %}class="active"{% endif %}><a href="{{ url_for('main.user', username=current_user.username) }}"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                    <li><a href="{{ url_for('auth.logout') }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block content %}
<div class="container">
  {% with messages = get_flashed_messages(with_categories=true) %}
  {% if messages %}
  {% for category, message in messages %}
  <div class="alert alert-{{ category }} alert-dismissible" role="alert">
    {{ message }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </div>
  {% endfor %}
  {% endif %}
  {% endwith %}

  {# application content needs to be provided in the app_content block #}
  {% block app_content %}{% endblock %}
</div>
{% endblock %}
