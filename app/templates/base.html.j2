{% block doc -%}
<!doctype html>
<html lang="en">
{%- block html %}
  <head>
    {%- block head %}
    {%- block metas %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="ESPCI Student Bar">
    <meta name="author" content="Samuel Diebolt">
    {%- endblock metas %}
    <title>{% block title %}{% if title %}{{ title }} - ESPCI Bar{% else %}Welcome to ESPCI Bar{% endif %}{% endblock title %}</title>

    {%- block styles %}
    <!-- Bootstrap 4.1 core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!-- Custom styles and favicon -->
    <link href="{{ url_for('static', filename='css/style.css') }}" rel="stylesheet">
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
    {%- endblock styles %}
    {%- endblock head %}
  </head>
  <body {% block body_attribs %}{% endblock body_attribs %}>
    {% block body -%}
    {% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      {% if current_user.is_bartender %}
      <a class="navbar-brand" href="{{ url_for('main.index') }}">ESPCI Bar</a>
      {% elif current_user.is_anonymous %}
      <a class="navbar-brand" href="{{ url_for('auth.login') }}">ESPCI Bar</a>
      {% else %}
      <a class="navbar-brand" href="{{ url_for('main.user', username=current_user.username) }}">ESPCI Bar</a>
      {% endif %}

      {% if not current_user.is_anonymous %}
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse navbarMain">
        {% if current_user.is_bartender %}
        <ul class="navbar-nav mr-auto">
          <li class="nav-item{% if (request.path == '/index' or request.path == '/') and current_user.is_bartender %} active{% endif %}">
            <a class="nav-link" href="{{ url_for('main.index') }}">Customers</a>
          </li>
          <li class="nav-item{% if (request.path == '/inventory') and current_user.is_bartender %} active{% endif %}">
            <a class="nav-link" href="{{ url_for('main.inventory')}}">Inventory</a>
          </li>
          <li class="nav-item{% if (request.path == '/transactions') and current_user.is_bartender %} active{% endif %}">
            <a class="nav-link" href="{{ url_for('main.transactions') }}">Transactions</a>
          </li>
          <li class="nav-item{% if (request.path == '/global_settings') and current_user.is_bartender %} active{% endif %}">
            <a class="nav-link" href="{{ url_for('main.global_settings')}}">Settings</a>
          </li>
          <li class="nav-item dropdown{% if (request.path == '/tools' or request.path == '/auth/register') and current_user.is_bartender %} active{% endif %}">
            <a class="nav-link dropdown-toggle" href="#" id="dropdownTools" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Tools</a>
            <div class="dropdown-menu" aria-labelledby="dropdownTools">
              <!-- <a class="dropdown-item" href="{{ url_for('main.statistics') }}">Statistics</a> -->
              <a class="dropdown-item" href="{{ url_for('auth.register') }}">Add user</a>
            </div>
          </li>
        </ul>
        {% endif %}
      </div>
      <div class="collapse navbar-collapse navbarMain">
        {% if current_user.is_bartender %}
        <form class="form-inline my-2 my-lg-0 ml-auto" method="get" action="{{ url_for('main.search') }}">
          {{ g.search_form.q(size=20, class_='form-control mr-sm-2', placeholder=g.search_form.q.label.text) }}
        </form>
        <a class="btn btn-{% if request.path != '/scanqrcode' and current_user.is_bartender %}outline-{% endif %}primary mx-2 my-2 my-sm-0" href="{{ url_for('main.scanqrcode') }}" role="button"><i data-feather="grid"></i></a>
        {% endif %}
        <ul class="navbar-nav">
          <li class="nav-item{% if request.path == '/user/'+current_user.username or request.path == '/edit_profile/'+current_user.username %} active{% endif %}">
            <a class="nav-link" href="{{ url_for('main.user', username=current_user.username) }}">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-nowrap" href="{{ url_for('auth.logout') }}">Sign out</a>
          </li>
        </ul>
      </div>
      {% endif %}
    </nav>
    {%- endblock navbar %}
    {% block content -%}
    <div class="container">
      {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
      {% for category, message in messages %}
      <div class="alert alert-{{ category }} alert-dismissible" role="alert">
        {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><i data-feather="x"></i></button>
      </div>
      {% endfor %}
      {% endif %}
      {% endwith %}

      {# application content needs to be provided in the app_content block #}
      {% block app_content %}{% endblock %}
    </div>
    {%- endblock content %}

    {% block scripts %}
    <!--  Bootstrap 4.1 core Javascript, Popper and jQuery -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    {{ moment.include_jquery() }}
    {{ moment.include_moment() }}

    <!-- Icons -->
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>
      feather.replace()
    </script>

    <!-- Graphs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    {%- endblock scripts %}
    {%- endblock body %}
  </body>
{%- endblock html %}
</html>
{% endblock doc -%}
