<div class="btn-group">
  <button type="button" class="btn btn-primary btn-md dropdown-toggle {% if user.balance <= 0 %}disabled{% endif %}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Pay <span class="glyphicon glyphicon-euro"></span>
  </button>

  <ul class="dropdown-menu dropdown-menu-index scrollable-menu">
    {% for item in inventory %}
    <li {% if not user.can_buy(item) or item.quantity <= 0 %}class="disabled"{% endif %}><a href="{{ url_for('main.pay', username=user.username, item_name=item.name) }}">{{ item.name }} ({{ item.price }}â‚¬)</a></li>
    {% endfor %}
  </ul>
</div>
