<div class="btn-group">
  <button type="button" class="btn btn-default btn-md dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="transaction">Top up </span><span class="glyphicon glyphicon-piggy-bank"></span>
  </button>

  <ul class="dropdown-menu dropdown-menu-index dropdown-menu-right">
    <form action="{{ url_for('main.top_up', username=user.username) }}" method="post">
    <div class="input-group top-up-form" style="padding: 4px;">
      <input type="number" step=0.01 min=0 name="amount" class="form-control" placeholder="Amount">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-ok"</button>
      </span>
    </div>
    </form>
  </ul>
</div>
