<table class="table">
    <tr>
        <td style="border: 0px;">
            <p>
                <a href="{{ url_for('main.user', username=user.username) }}">
                    {{ user.username }}
                </a>
            </p>
            <small>
                {% if user.last_seen %}
                <p>{{ 'Last seen on' }}:
                   {{ moment(user.last_seen).format('lll') }}</p>
                {% endif %}
            </small>
        </td>
    </tr>
</table>
